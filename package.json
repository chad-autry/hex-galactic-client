{
  "name": "hexagonal-space-client",
  "version": "0.0.0",
  "description": "The client for the hexagonal space tactical space game platform",
  "scripts": {
    "build": "mkdirp ./target/webapp && npm run less && npm run copy:HTML && npm run copy:jquery&& browserify ./src/bootStrap.js --debug -o ./target/webapp/bundle.js",
    "jshint": "jshint ./src",
    "build:scenarios": "browserify ./src/services/scenarios/TestScene.js --debug --standalone TestScene -o ./target/webapp/TestScene.js",
    "clean": "rimraf ./target",
    "copy:HTML": "copyfiles -f ./src/index.html ./target/webapp",
    "copy:jquery": "copyfiles -f ./node_modules/jquery/dist/jquery.min.js ./target/webapp",
    "copy:polyfill": "copyfiles -f ./node_modules/angular2/bundles/angular2-polyfills.js ./target/webapp",
    "less": "lessc ./src/less/main.less > ./target/webapp/styles.css",
    "server": "lite-server --baseDir ./target/webapp --files './target/webapp/**/*.html' './target/webapp/**/*.css' './target/webapp/**/*.js'"
  },
  "keywords": [
    "hexagonal",
    "space",
    "angular2"
  ],
  "author": {
    "name": "Chad Autry",
    "email": "chad.autry@gmail.com",
    "url": "http://chad-autry.github.io/"
  },
  "dependencies": {
    "bootstrap": "^3.3.6",
    "cartesian-hexagonal": "0.0.3",
    "golden-layout": "^1.5.1",
    "hex-grid-map-3d": "^0.33.0",
    "reactify": "^1.1.1"
  },
  "devDependencies": {
    "browserify": "git+https://git@github.com/chad-autry/node-browserify",
    "browserify-shim": "^3.8.12",
    "copyfiles": "^0.2.1",
    "data-chains": "0.4.0",
    "jquery": "^2.2.3",
    "jshint": "^2.9.1-rc1",
    "less": "^2.5.3",
    "lite-server": "^1.3.1",
    "mkdirp": "^0.5.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "rimraf": "^2.4.4"
  },
  "jshintConfig": {
    "node": "true",
    "predef": [
      "document"
    ],
    "esversion": 6
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": true
        }
      ]
    ]
  }
}
